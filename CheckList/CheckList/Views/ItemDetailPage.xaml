<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="com.kmd.Views.ItemDetailPage"
		Title="New Item">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" Icon="check_g.png"/>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="20" Padding="15" VerticalOptions="FillAndExpand">
			<Label Text="Text" FontSize="Medium" />
            <Entry Text="{Binding Item.Text}" Placeholder="Task name" Focused="OnFocus_Name" x:Name="EText" TextChanged="Txt_Changed" />
			<Label Text="Description" FontSize="Medium" />
            <StackLayout MinimumHeightRequest="15" x:Name="EditorBox">
                <!--<Editor Text="{Binding Item.Description}" 
                    Focused="OnFocus_Description"
                    Keyboard="Chat" x:Name="EDesc" TextChanged="Desc_Changed"
                    VerticalOptions="FillAndExpand">
                </Editor>-->
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
